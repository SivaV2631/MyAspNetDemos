@model IEnumerable<JobPortal.Models.Job>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="card-columns">
    @foreach (var job in Model)
    {
        <div class="card">
            <div class="card-header">
                @job.JobTitle
            </div>
            <div class="card-body">
                @Html.DisplayNameFor(modelItem => job.JobCategory.JobCategoryName) : @job.JobCategory.JobCategoryName
                <br />
                @Html.DisplayNameFor(modelItem => job.JobCategory.JobCategoryId) : @job.JobCategoryId
            </div>
            <div class="card-footer">
                <a class="genric-btn genric-btn-sm genric-btn-primary" asp-action="Edit" asp-route-id="@job.JobId">Edit</a>
                <a class="genric-btn genric-btn-sm genric-btn-primary" asp-action="Details" asp-route-id="@job.JobId">Details</a>
                <a class="genric-btn genric-btn-sm genric-btn-primary" asp-action="Delete" asp-route-id="@job.JobId">Delete</a>
            </div>
        </div>
    }
</div>

<a asp-area="LibMgmt" asp-controller="Categories" asp-action="Index">List of Categories</a>
