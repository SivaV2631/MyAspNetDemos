@model IEnumerable<Restaurant1.Models.Category>

@{
    ViewData["Title"] = "Index";
}
 <link href="assets/css/style.css" rel="stylesheet">

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table bg-transparent table-bordered table-striped table-hover table-striped-columns border-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                Number of Items
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @item.Items.Count()
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a> |
                <a asp-area="RestMgmt" asp-controller="Items" 
                       asp-action="GetItemsOfCategory" 
                       asp-route-filterCategoryId="@item.CategoryId">Manage Items</a>
            </td>
        </tr>
}
    </tbody>
</table>
