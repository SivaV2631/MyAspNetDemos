@model IEnumerable<Restaurant1.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card-columns">
    @foreach (var item in Model) {
        <div class="card">
            <div class="card-header">
                @item.ItemName
            </div>
            <div class="card-body">
                @Html.DisplayNameFor(modelItem => item.Category.CategoryName) : @item.Category.CategoryName
                <br />
                @Html.DisplayNameFor(modelItem => item.ItemName) : @item.ItemName
                <br />
                @Html.DisplayNameFor(modelItem => item.ItemPrice) : @item.ItemPrice
                 <br />
                @Html.DisplayNameFor(modelItem => item.ItemQuantity) : @item.ItemQuantity


            </div>
            <div class="card-footer">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ItemId">Edit</a>
                <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.ItemId">Details</a>
                <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
            </div>
        </div>
    }
</div>

<a asp-area="RestMgmt" asp-controller="Categories" asp-action="Index">List of Categories</a>

