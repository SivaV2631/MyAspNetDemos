@model IEnumerable<JobPortal.Models.JobRequirement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobRequirementTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobRequirementTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.JobRequirementId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.JobRequirementId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.JobRequirementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
