@model IEnumerable<JobPortal.Models.JobNature>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="genric-btn primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JobNatureName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JobNatureName)
            </td>
            <td>
                <a asp-action="Edit" class="genric-btn primary " asp-route-id="@item.JobNatureId">Edit</a> |
                <a asp-action="Details" class="genric-btn info" asp-route-id="@item.JobNatureId">Details</a> |
                <a asp-action="Delete" class="genric-btn danger" asp-route-id="@item.JobNatureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
