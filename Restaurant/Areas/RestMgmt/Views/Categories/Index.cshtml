@model IEnumerable<Restaurant.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table  bg-transparent table-bordered table-striped table-hover table-striped-columns border-success">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a  class="btn btn-success" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

 <p><a class="btn btn-sm btn-primary" href="/">Home</a></p>
